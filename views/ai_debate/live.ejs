            box-shadow: inset 0 0 12px #7c3aed33;
            transition: box-shadow 0.3s;
        }

        .debater-link-box:hover {
            box-shadow: inset 0 0 24px #a78bfa55;
        }

        .debater-link-title {
            display: flex;
            align-items: center;
